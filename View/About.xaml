<mahAppCtrl:MetroWindow x:Class="WTTasks.View.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False" WindowStyle="None"
        xmlns:mahAppCtrl="http://metro.mahapps.com/winfx/xaml/controls"
                        WindowStartupLocation="CenterOwner" BorderThickness="1" BorderBrush="{StaticResource AccentColorBrush}" ShowMaxRestoreButton="False" ShowMinButton="False"
        Title="About" Height="300" Width="300">
    <StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image Source="../Resources/App_Large.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"></Image>
            <Label Content="个人助手" FontSize="28"></Label>
        </StackPanel>
        <Button Width="100" Height="30" Content="确定" x:Name="btnOK" Click="btnOK_Click">
            
        </Button>
    </StackPanel>
</mahAppCtrl:MetroWindow>
